


<div id="friends">
  <% @friends.each do |friend| %>
    <%= render friend %>
    <p>
      <%= link_to "Show this friend", friend, class:"btn btn-secondary" %>
    </p>
  <% end %>
</div>


<%= link_to "New friend", new_friend_path , class:"btn btn-secondary" %>

<% if user_signed_in?%>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th> First name</th>
      <th> Last name</th>
      <th> Email</th>
      <th> Phone</th>
      <th> Twitter</th>
      <th> User ID</th>
      <th colspan="2"></th>
    </tr>
  </thead>
</table>

  
