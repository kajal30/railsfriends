

<div class="jumbotron">
  <h1 class="display-4">Hello, world!</h1>
  <%= @friend.first_name%>
  <%= @friend.last_name%>
  <p class="lead">
    <%= @friend.email%>  |  <%= @friend.phone%>  | <%= @friend.twitter%>
  </p>
  <hr class="my-4">
  
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>

  <%= button_to "Destroy this friend", @friend, method: :delete %>
</div>

<%= render @friend %>






